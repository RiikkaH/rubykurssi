<h2>List of ratings</h2>

<p>Number of ratings: <%= @ratings.count %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating %> <%= link_to rating.user.username, user_path(rating.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'create a new rating' , new_rating_path, class:"btn btn-primary" %>
</p>
